---
interface Props {
  title: string;
  description: string;
  href: string;
  status?: 'stub' | 'draft' | 'complete';
}

const { title, description, href, status = 'stub' } = Astro.props;

const statusColors = {
  stub: 'bg-surface-100 text-surface-500',
  draft: 'bg-accent-50 text-accent-600',
  complete: 'bg-green-50 text-green-700',
};
---

<a
  href={href}
  class="group block border border-surface-200 hover:border-accent-500 transition-colors p-6 relative"
>
  <div class="absolute top-0 left-0 w-1 h-full bg-accent-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
  <div class="flex items-start justify-between gap-4 mb-3">
    <h3 class="font-mono text-base uppercase tracking-wider group-hover:text-accent-600 transition-colors">
      {title}
    </h3>
    <span class={`font-mono text-xs uppercase tracking-wider px-2 py-0.5 ${statusColors[status]}`}>
      {status}
    </span>
  </div>
  <p class="text-surface-600 text-sm leading-relaxed">{description}</p>
</a>
