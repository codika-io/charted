---
interface Props {
  filePath?: string;
}

const { filePath } = Astro.props;
const baseUrl = 'https://github.com/charted-science/charted';
const href = filePath ? `${baseUrl}/edit/main/${filePath}` : baseUrl;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-2 font-mono text-xs uppercase tracking-wider text-surface-400 hover:text-accent-600 transition-colors border border-dashed border-surface-300 hover:border-accent-400 px-3 py-1.5"
>
  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
  </svg>
  Edit on GitHub
</a>
